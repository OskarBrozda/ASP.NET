@using PhotoApp.Models
@model List<Photo>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h2>GALERIA ZDJĘĆ</h2>
@if(User.Identity.IsAuthenticated)
{
<h2>
    <a class="btn btn-outline-primary" asp-controller="Photo" asp-action="CreateApi">Dodaj zdjęcie</a>
</h2>
}
@if (Model.Count() > 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Definition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].AuthorId)
            </th>
            <th>
                Akcje
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.Definition.GetDisplayName()
                </td>
                <td>
                    @item.Author.FirstOrDefault(a => a.Value == item.AuthorId.ToString())?.Text
                </td>
                <td>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                    {
                        <a class="btn btn-outline-primary"
                           asp-action="Update"
                           asp-controller="Photo"
                           asp-route-id=@item.PhotoId>
                            Edytuj
                        </a>
                    }
                    <a class="btn btn-outline-info"
                       asp-action="Details"
                       asp-controller="Photo"
                       asp-route-id=@item.PhotoId>
                        Szczegóły
                    </a>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                    {
                        <a class="btn btn-outline-danger"
                           asp-action="Delete"
                           asp-controller="Photo"
                           asp-route-id=@item.PhotoId>
                            Usuń
                        </a>
                    }
                </td>
            </tr>
        }
    </table>
}