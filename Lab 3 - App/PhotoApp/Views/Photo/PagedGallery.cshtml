@using PhotoApp.Models
@model PagingList<Photo>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h2>GALERIA ZDJĘĆ</h2>
@if(User.Identity.IsAuthenticated)
{
<h2>
    <a class="btn btn-outline-primary" asp-controller="Photo" asp-action="CreateApi">Dodaj zdjęcie</a>
</h2>
}
@if (Model.Data.Count() > 0)
{
    <table class="table">
        <tr>
            <th>
               @Html.DisplayNameFor(model => model.Data.FirstOrDefault().Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data.FirstOrDefault().Definition)            
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data.FirstOrDefault().AuthorId)            
            </th>
            <th>
                Akcje
            </th>
        </tr>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.Definition.GetDisplayName()
                </td>
                <td>
                    @if (item != null && item.Author != null && item.AuthorId != null)
                    {
                        @item.Author.FirstOrDefault(a => a.Value == item.AuthorId.ToString())?.Text
                    }
                </td>
                <td>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                    {
                        <a class="btn btn-outline-primary"
                           asp-action="Update"
                           asp-controller="Photo"
                           asp-route-id=@item.PhotoId>
                            Edytuj
                        </a>
                    }
                    <a class="btn btn-outline-info"
                       asp-action="Details"
                       asp-controller="Photo"
                       asp-route-id=@item.PhotoId>
                        Szczegóły
                    </a>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                    {
                        <a class="btn btn-outline-danger"
                           asp-action="Delete"
                           asp-controller="Photo"
                           asp-route-id=@item.PhotoId>
                            Usuń
                        </a>
                    }
                </td>
            </tr>
        }
    </table>

    <nav aria-label="Books page navigation">
        <ul class="pagination">
            @if (Model.IsPrevious)
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-controller="Photo"
                       asp-action="PagedGallery"
                       asp-route-page="@(Model.Number - 1)"
                       asp-route-size="5">
                        Poprzednia
                    </a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <a class="page-link">Poprzednia</a>
                </li>
            }
            <li class="page-item disabled">
                <a class="page-link">@Model.Number</a>
            </li>
            @if (Model.IsNext)
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-controller="Photo"
                       asp-action="PagedGallery"
                       asp-route-page="@(Model.Number + 1)"
                       asp-route-size="5">
                        Następna
                    </a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <a class="page-link">Następna</a>
                </li>
            }
        </ul>
    </nav>
}