@model List<Author>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h2>SPIS AUTORÓW</h2>
<h2>
    <a class="btn btn-outline-primary" asp-controller="Author" asp-action="Create">Dodaj autora</a>
</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Address.City)
        </th>
        <th>
            Akcje
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Surname
            </td>
            <td>
                @item.Address.City
            </td>
            <td>
                <a class="btn btn-outline-primary"
                   asp-action="Update"
                   asp-controller="Author"
                   asp-route-id=@item.AuthorId>
                    Edytuj
                </a>
                <a class="btn btn-outline-info"
                   asp-action="Details"
                   asp-controller="Author"
                   asp-route-id=@item.AuthorId>
                    Szczegóły
                </a>
                <a class="btn btn-outline-danger"
                   asp-action="Delete"
                   asp-controller="Author"
                   asp-route-id=@item.AuthorId>
                    Usuń
                </a>
            </td>
        </tr>
    }
</table>