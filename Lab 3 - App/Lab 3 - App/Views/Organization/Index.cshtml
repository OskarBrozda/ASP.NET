@using Lab3___App.Models
@model List<Organization>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h2>SPIS ORGANIZACJI</h2>
<h2>
    <a class="btn btn-outline-primary" asp-controller="Organization" asp-action="Create">Dodaj organizację</a>
</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model[0].Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Description)
        </th>
        <th>
            Akcje
        </th>
    </tr>
    @foreach (var item in Model.Where(x => x.OrganizationId != 1))
    {
        <tr>
            <td>
                @item.Title
            </td>
            <td>
                @item.Description
            </td>
                <td>
                    <a class="btn btn-outline-primary"
                       asp-action="Edit"
                       asp-controller="Organization"
                       asp-route-id=@item.OrganizationId>
                        Edytuj
                    </a>
                    <a class="btn btn-outline-info"
                       asp-action="Details"
                       asp-controller="Organization"
                       asp-route-id=@item.OrganizationId>
                        Szczegóły
                    </a>
                    <a class="btn btn-outline-danger"
                       asp-action="Delete"
                       asp-controller="Organization"
                       asp-route-id=@item.OrganizationId>
                        Usuń
                    </a>
                </td>
        </tr>
    }
</table>
<h2>
    <a class="btn btn-outline-primary" asp-controller="Contact" asp-action="Index">Wróć</a>
</h2>