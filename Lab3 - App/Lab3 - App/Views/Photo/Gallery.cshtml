@model List<Photo>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>GALERIA</h1>
<h2>
    <a class="btn btn-outline-primary" asp-controller="Photo" asp-action="Create">Dodaj zdjęcie</a>
</h2>
<div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Author)
            </th>
            <th>
                Akcje
            </th>
        </tr>
        @foreach (var item in @Model)
        {
            <tr>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.Author
                </td>
                <td>
                    <a class ="btn btn-outline-primary" asp-controller="Photo" asp-action="Update" asp-route-id=@item.Id>Edycja</a>
                    <a class ="btn btn-outline-info" asp-controller="Photo" asp-action="Details" asp-route-id=@item.Id>Szczegóły</a>
                    <a class ="btn btn-outline-danger" asp-controller="Photo" asp-action="Delete" asp-route-id=@item.Id>Usuń</a>
                </td>
            </tr>
        }
    </table>
</div>