@{
}

<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-6">
            <h2>Data urodzenia</h2>
            <form asp-controller="Contact" asp-action="Update" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="name">Imię</label>
                    <input class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="name">Email</label>
                    <input class="form-control" asp-for="Email" type="email" name="Email" id="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="name">Telefon</label>
                    <input class="form-control" asp-for="Phone" type="number" name="Phone" id="Phone" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <button class="btn btn-primary" type="submit">Zapisz</button>
                </div>
            </form>
        </div>
    </div>
</div>